  "dependencies": {
    "electron": "^39.2.7"
  },
  "devDependencies": {
    "@types/node": "^25.0.2",
    "@types/bun": "^1.3.4",
    "@biomejs/biome": "^2.3.8",
    "typescript": "^5.9.3"
  }
